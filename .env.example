# JARVIS Orchestrator Configuration
PORT=5000
NODE_ENV=development
LOG_LEVEL=info

# AI Agent Processor Configuration
AI_AGENT_SERVICE_URL=http://localhost:8000
AGENT_TIMEOUT=30000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Service Communication
SERVICE_SECRET=your_service_secret_here
MAX_REQUEST_SIZE=10mb

# Performance and Monitoring
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=100
ENABLE_PERFORMANCE_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:8000
TRUST_PROXY=false

# Logging
LOG_FILE_MAX_SIZE=5242880
LOG_FILE_MAX_FILES=10
LOG_DIR=logs

# Database (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/jarvis_db
# REDIS_URL=redis://localhost:6379

# External Services (for future integration)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Monitoring and Analytics
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3001
# SENTRY_DSN=your_sentry_dsn_here
